@model WEBSITESTEFANKEZDI.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background-login">
<form asp-action="Signin" asp-controller="Account" method="post">
    <div class="form-signin-signup">
        <h4 class="title-login-signup">Sign in</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-child">
            <label asp-for="UserName"></label>
            <div class="form-child-box">
                <input asp-for="UserName" class="form-control custom-input" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-child">
            <label asp-for="Password"></label>
            <div class="form-child-box">
                <input asp-for="Password" type="password" class="form-control custom-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-child">
            <div class="buton-create">
                <button type="submit" class="btn-primary">Sign In</button>
            </div>
        </div>
    </div>
</form>
</div>
